// ============================================
// REFERRAL SYSTEM MODELS
// ============================================

// 11. Referral Tracking
model Referral {
  id            String   @id @default(uuid())
  referrerId    String                        // User who referred
  refereeId     String   @unique              // User who signed up
  referralType  String                        // patient_to_patient, doctor_to_doctor, doctor_to_patient
  status        String   @default("pending")  // pending, completed, credited
  rewardAmount  Float    @default(0)
  createdAt     DateTime @default(now())
  creditedAt    DateTime?
  
  referrer      User     @relation("ReferrerRelation", fields: [referrerId], references: [id])
  referee       User     @relation("RefereeRelation", fields: [refereeId], references: [id])
}

// 12. E-Wallet for Users
model Wallet {
  id           String   @id @default(uuid())
  userId       String   @unique
  balance      Float    @default(0)
  totalEarned  Float    @default(0)   // Lifetime earnings
  totalWithdrawn Float  @default(0)   // Lifetime withdrawals
  user         User     @relation(fields: [userId], references: [id])
  transactions Transaction[]
}

// 13. Transaction History
model Transaction {
  id          String   @id @default(uuid())
  walletId    String
  type        String   // credit, debit, withdrawal, bonus, refund
  amount      Float
  description String?
  referenceId String?  // Link to referral/withdrawal ID
  status      String   @default("completed") // completed, pending, rejected
  createdAt   DateTime @default(now())
  wallet      Wallet   @relation(fields: [walletId], references: [id])
}

// 14. Withdrawal Requests
model WithdrawalRequest {
  id          String   @id @default(uuid())
  userId      String
  amount      Float
  upiId       String?
  bankAccount String?  // Account number
  bankIfsc    String?  // IFSC code
  bankName    String?  // Account holder name
  status      String   @default("pending") // pending, approved, rejected, processed
  adminNote   String?  // Note from admin
  processedAt DateTime?
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}

// 15. Referral Settings (Admin Configurable)
model ReferralSettings {
  id                    String   @id @default("default")
  patientToPatient      Float    @default(50)    // Reward amount
  doctorToDoctor        Float    @default(100)
  doctorToPatient       Float    @default(75)
  minWithdrawal         Float    @default(100)   // Minimum withdrawal amount
  isEnabled             Boolean  @default(true)  // Enable/disable referral program
  updatedAt             DateTime @updatedAt
}

// 16. AI Chat History (Persisting Aarogya AI conversations per user)
model AIChatMessage {
  id        String   @id @default(uuid())
  userId    String
  sender    String   // "user" or "ai"
  content   String
  createdAt DateTime @default(now())
}

// 17. Prescriptions (uploaded by patient or doctor)
model Prescription {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  doctorId    String?  @map("doctor_id")
  doctorName  String?  @map("doctor_name")
  
  title       String
  description String?
  fileUrl     String?  @map("file_url")
  fileData    String?  @map("file_data")
  fileType    String?  @map("file_type")
  fileName    String?  @map("file_name")
  
  issuedDate  DateTime @default(now()) @map("issued_date")
  expiryDate  DateTime? @map("expiry_date")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  medications Medication[]
  
  @@map("prescription")
}

// 18. Medications (for reminders)
model Medication {
  id              String   @id @default(uuid())
  userId          String   @map("user_id")
  prescriptionId  String?  @map("prescription_id")
  
  name            String
  dosage          String
  frequency       String
  timing          String[]
  instructions    String?
  
  startDate       DateTime @default(now()) @map("start_date")
  endDate         DateTime? @map("end_date")
  
  isActive        Boolean  @default(true) @map("is_active")
  reminderEnabled Boolean  @default(true) @map("reminder_enabled")
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  prescription    Prescription? @relation(fields: [prescriptionId], references: [id])
  
  @@map("medication")
}

// ============================================
// MEDICAL HISTORY SYSTEM MODELS
// ============================================

model PatientMedicalHistory {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Section Links
  birthHistory     BirthHistory?
  childhoodHistory ChildhoodHistory?
  femaleHistory    FemaleReproductiveHistory?
  maleHistory      MaleReproductiveHistory?
  familyHistory    FamilyMedicalHistory[]
  surgeries        Surgery[]
  allergies        Allergy[]
  accidents        AccidentHistory[]
  
  completionStatus Float @default(0) // Percentage 0-100
  lastUpdated      DateTime @updatedAt // Track when they last worked on it
}

model BirthHistory {
  id              String @id @default(uuid())
  historyId       String @unique
  patientHistory  PatientMedicalHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  
  birthTerm       String? // full-term, premature, post-term
  prematureWeeks  Int?
  deliveryType    String? // vaginal, c-section, assisted
  cSectionType    String? // planned, emergency
  birthWeight     String? // low, normal, high
  complications   String[] // Array of strings (stored as JSON in Postgres usually, or scalar list)
  nicudays        Int?
  birthInjury     String?
  congenitalDefect String?
  
  motherHealthIssues String[] // diabetes, bp, smoking, etc
  medications     String?
}

model ChildhoodHistory {
  id              String @id @default(uuid())
  historyId       String @unique
  patientHistory  PatientMedicalHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  
  developmentalDelays String? // none, late-walking, etc
  walkingAge      String?
  speakingAge     String?
  
  childhoodIllnesses String[] // measles, mumps, etc
  
  vaccinationStatus String? // fully, partially, none
  missingVaccines   String[]
  hasVaccineCard    Boolean @default(false)
  vaccineReactions  String?
  
  hospitalizations ChildhoodHospitalization[]
}

model ChildhoodHospitalization {
  id              String @id @default(uuid())
  childhoodId     String
  childhoodHistory ChildhoodHistory @relation(fields: [childhoodId], references: [id], onDelete: Cascade)
  
  age             Int
  reason          String
  durationDays    Int
  surgery         Boolean @default(false)
}

model FemaleReproductiveHistory {
  id              String @id @default(uuid())
  historyId       String @unique
  patientHistory  PatientMedicalHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  
  menarcheAge     Int?
  cycleRegularity String? // regular, irregular
  flowCharacteristics String? // heavy, painful
  pcosDiagnosed   Boolean @default(false)
  endometriosis   Boolean @default(false)
  
  pregnancies     Pregnancy[]
  contraception   String?
  breastConcern   String?
}

model Pregnancy {
  id              String @id @default(uuid())
  femaleHistoryId String
  femaleHistory   FemaleReproductiveHistory @relation(fields: [femaleHistoryId], references: [id], onDelete: Cascade)
  
  outcome         String // live-birth, miscarriage
  year            Int
  deliveryType    String
  complications   String[]
}

model MaleReproductiveHistory {
  id              String @id @default(uuid())
  historyId       String @unique
  patientHistory  PatientMedicalHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  
  pubertyAge      String? // early, normal, late
  genitalIssues   String[] // undescended, hernia, etc
  circumcision    Boolean?
  currentConcerns String[]
  sexualHealth    String[]
}

model FamilyMedicalHistory {
  id              String @id @default(uuid())
  historyId       String
  patientHistory  PatientMedicalHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  
  relation        String // Mother, Father, Sibling
  conditions      String[] // diabetes, heart-disease
  ageDiagnosed    String?
  status          String? // managed, deceased
}

model Surgery {
  id              String @id @default(uuid())
  historyId       String
  patientHistory  PatientMedicalHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  
  type            String
  bodyPart        String? // Made optional as we might not always have it from the new UI
  year            Int?    // Made optional as we might have full date
  surgeryDate     DateTime?
  hospital        String?
  surgeon         String?
  complications   String?
  notes           String?
  imageUrl        String?
}

model Allergy {
  id              String @id @default(uuid())
  historyId       String
  patientHistory  PatientMedicalHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  
  type            String // drug, food, environmental
  allergen        String // Penicillin, Peanuts
  reaction        String?
  severity        String?
  status          String? // Active, Recovered
  onset           String?
  duration        String?
  medication      String?
  notes           String?
  imageUrl        String?
}

model AccidentHistory {
  id              String @id @default(uuid())
  historyId       String
  patientHistory  PatientMedicalHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  
  type            String // vehicle, fall, etc
  year            Int?
  accidentDate    DateTime?
  age             Int?
  
  injuries        AccidentInjury[]
  treatment       String?
  hospital        String?
  hospitalDays    Int?
  residualEffects String?
  notes           String?
  // Deprecated/Legacy fields could be kept or removed:
  lastingEffects  String[]
}

model AccidentInjury {
  id              String @id @default(uuid())
  accidentId      String
  accident        AccidentHistory @relation(fields: [accidentId], references: [id], onDelete: Cascade)
  
  bodyPart        String
  injuryType      String
}

// ============================================
// HEALTH REPORTS & AI ANALYSIS MODELS
// ============================================

model HealthReport {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String?  // Copied from file name or auto-generated
  type      String   // "Blood Work", "MRI", "CT Scan", "X-Ray"
  fileUrl   String
  reportDate DateTime // From OCR or upload date
  
  status    String   @default("processing") // processing, completed, failed
  
  results   TestResult[]
  findings  ImagingFinding[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TestResult {
  id          String   @id @default(uuid())
  reportId    String
  report      HealthReport @relation(fields: [reportId], references: [id], onDelete: Cascade)
  
  category    String?  // e.g. "CBC", "Lipid Panel"
  parameter   String   // "Hemoglobin"
  value       Float
  unit        String   // "g/dL"
  refMin      Float?
  refMax      Float?
  status      String   // "Normal", "High", "Low"
  isNewTest   Boolean  @default(false)
}

model ImagingFinding {
  id          String   @id @default(uuid())
  reportId    String
  report      HealthReport @relation(fields: [reportId], references: [id], onDelete: Cascade)
  
  impression  String?
  conclusion  String?
  
  bodyPart    String   // "Lumbar Spine"
  locationId  String?  // ID for Three.js mapping, e.g. "spine_lumbar"
}
